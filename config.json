{
  "source": ["tokens/tokens-clean.json"],
  "platforms": {
    "stylus": {
      "transformGroup": "css",
      "buildPath": "build/stylus/",
      "files": [{
        "destination": "_variables.styl",
        "format": "stylus/variables"
      }]
    },
    "scss": {
      "transformGroup": "scss",
      "buildPath": "build/scss/",
      "files": [{
        "destination": "_variables.scss",
        "format": "scss/variables"
      }]
    }   
  }
}
